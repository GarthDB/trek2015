header
  width 100%
  height 90vh
  background url('../img/bg_img.jpg') center bottom
  background-size cover
  position absolute
  &:after
    content none
    content ''
    width 100%
    height 100%
    position absolute
    background rgba(0,0,0,0.5)
    top 0
    left 0
    z-index 1
  .logo
    height 60vh
    width 100%
    background url('../img/logo.svg') center no-repeat
    background-size contain
    position absolute
    top 10vh
    z-index 2
