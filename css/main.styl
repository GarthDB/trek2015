body
  font-family 'Open Sans', sans-serif
  color #666
  background #FFFCF0
a
  color #046380
  text-decoration none
  &:hover
    color #002F2F
header
  width 100%
  height 100vh
  background url('../img/bg_img.jpg') center bottom
  background-size cover
  position relative
  background-attachment fixed
  &:after
    content none
    content ''
    width 100%
    height 100%
    position absolute
    background rgba(0,0,0,0.5)
    top 0
    left 0
    z-index 1
  .logo
    height 60vh
    width 100%
    background url('../img/logo.svg') center no-repeat
    background-size contain
    position absolute
    bottom 15vh
    z-index 2
main.content
  display block
  width 100%
  height 100vh
  section
    box-sizing border-box
    padding 80px 0
    min-height 50vh
nav.main
  width 100%
  ul
    list-style none
    display block
    max-width 700px
    position relative
    margin 0 auto
    text-align right
    z-index 2
  li
    display inline-block
  a
    color rgba(255,255,255,0.85)
    text-decoration none
    padding 8px 15px 10px
    margin-left 5px
    border-radius 3px
    &:hover
      color white
      background rgba(0,0,0,0.4)
  &.first
    position absolute
    top 40px
  &.duplicate
    background url('../img/bg_img.jpg') center bottom
    background-size cover
    position relative
    background-attachment fixed
    height 90px
    box-sizing border-box
    padding-top 50px
    &:after
      content none
      content ''
      width 100%
      height 100%
      position absolute
      background rgba(0,0,0,0.5)
      top 0
      left 0
      z-index 1
    &.fixed
      position fixed
      top 0
.bounds
  width 100%
  max-width 500px
  position relative
  margin 0 auto
  box-sizing border-box
  padding 10px
  ul
    margin-left 1.7rem
  li
    line-height 1.7rem
p
  line-height 1.7rem
  text-indent 1.7rem
  &.soon
    text-align center
    text-indent 0
h2
  font-size 1.8rem
  text-transform  uppercase
  font-weight  600
  letter-spacing  3px
  margin-bottom  1.5rem
  text-align  center
